# ============================================
# Docker Compose Environment Variables
# ============================================
# Copy this file to .env and update with your values

# ============================================
# MariaDB Configuration (Frappe/ERPNext)
# ============================================
MYSQL_ROOT_PASSWORD=admin
MYSQL_DATABASE=frappe
MYSQL_USER=frappe
MYSQL_PASSWORD=frappe

# ============================================
# PostgreSQL Configuration (Fleetbase)
# ============================================
FLEETBASE_DB_NAME=fleetbase
FLEETBASE_DB_USER=fleetbase
FLEETBASE_DB_PASSWORD=fleetbase

# ============================================
# Fleetbase Configuration
# ============================================
FLEETBASE_PORT=3000
FLEETBASE_JWT_SECRET=change-this-secret-key-in-production
FLEETBASE_API_KEY=change-this-api-key-in-production
NODE_ENV=production

# ============================================
# Frappe/ERPNext Configuration
# ============================================
FRAPPE_PORT=8000
FRAPPE_SOCKETIO_PORT=9000
SITE_NAME=erpnext.localhost
ADMIN_PASSWORD=admin
FRAPPE_VERSION=v14.0.0
ERPNEXT_VERSION=v14.0.0

# ============================================
# Application URLs (for development)
# ============================================
# Update these if you're using custom domains
FLEETBASE_URL=http://localhost:3000
ERPNEXT_URL=http://localhost:8000

